.poster-container {
    box-sizing: border-box;
    width: 100vw;
    background: #333333;
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 1;
}

/*canvas的wrapper*/
.poster-canvas {
    position: fixed;
    top: 0;
    left:0;
    right:0;
    bottom: 200rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

/*真实的canvas*/
.myCanvas {
    background: #333333;
}

.poster-buttons {
    background: #F3F4F6;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 250rpx;
    padding-top:10rpx;
    padding-bottom: env(safe-area-inset-bottom);
    z-index:3;
    display: flex;
    flex-direction: column;
    justify-content: center;

}

.saveBtn {
    margin-bottom: 10rpx;
}

.onCloseBth {
    width: 100%;
    padding-top: 10rpx;
    border: 0;
}

button::after{
    border: none !important;
    border: 0 !important;
}

.invitation-list {
    padding: 24rpx 48rpx;
}

.shareWithList {
    padding-top: 40rpx;
    padding-bottom: 42rpx;
}

.each-share-with-person-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
}

.common-long-button {
    width:678rpx;
    height:93rpx;
    line-height: 93rpx;
    text-align: center;
    background: #333;
    color: #FDA040;
    z-index:1;
    transform: translate3d(0, 0, 0);
    box-shadow: 0px 10rpx 18rpx 3rpx rgba(6,0,1,0.21);
}

.button-radius {
    border-radius: 47rpx;
}

.text-small {  font-size: 26rpx;  }
.text-middle{  font-size: 28rpx;  }